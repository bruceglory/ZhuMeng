<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/school_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/school_appbar"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="center"
            app:expandedTitleMarginBottom="80dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="true">

            <ImageView
                android:id="@+id/school_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:background="@drawable/image_nav_drawer_account_background"
                app:layout_collapseMode="parallax" />

            <TextView
                android:id="@+id/school_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:scaleY="0"
                android:transformPivotY="0dp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:ellipsize="end"
                android:maxLines="2"
                android:elevation="4dp"
                />

            <!-- As our statusBar is transparent below and content is moved behind our toolbar has to include the padding on top so we use this area -->
            <android.support.v7.widget.Toolbar
                android:id="@+id/school_info_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingTop="@dimen/tool_bar_top_padding"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:id="@+id/school_detail_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:background="@color/md_white_1000">

           <TextView
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/md_grey_300"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@string/major_intro_tilte"
                />

            <include layout="@layout/divder_line"/>

            <TextView
                android:id="@+id/major_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:textSize="12sp"
                android:textColor="#000000"
                android:lineSpacingMultiplier="1.3"
                android:ellipsize="end"
                android:maxLines="4"
                />
            <Button
                android:id="@+id/load_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"

                />

            <TextView
                android:id="@+id/major_introduce_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:lineSpacingMultiplier="1.3"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/load_less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_below="@id/major_introduce_more"
                android:text="less"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/md_grey_300"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@color/md_white_1000"
            >

            <TextView
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/md_grey_300"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@string/major_des_title"
                />

            <include layout="@layout/divder_line"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="jigejgie"
                />
              <TextView
                android:id="@+id/major_introduceq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.3"
                android:ellipsize="end"
                android:maxLines="4"
                />
            <Button
                android:id="@+id/load_more1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"

                />

            <TextView
                android:id="@+id/major_introduce_more1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:lineSpacingMultiplier="1.3"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/load_less1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_below="@id/major_introduce_more"
                android:text="less"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/md_grey_300"
                />
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@color/md_white_1000"
            >

            <TextView
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/md_grey_300"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@string/major_intro_tilte"
                />

            <include layout="@layout/divder_line"/>

             <TextView
                android:id="@+id/major_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:textSize="12sp"
                android:textColor="#000000"
                android:lineSpacingMultiplier="1.3"
                android:ellipsize="end"
                />
            <Button
                android:id="@+id/load_more2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"

                />

            <TextView
                android:id="@+id/major_des_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:lineSpacingMultiplier="1.3"
                android:text="本专业培养具备比较扎实的马克思主义经济学理论基础，熟悉现代西方经济学理论，比较熟练地掌握现代经济分析方法，知识面较宽，具有向经济学相关领域扩展渗透的能力，能在综合经济管理部门、政策研究部门，金融机构和企业从事经济分析、预测、规划和经济管理工作的高级专门人才。"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/load_less2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_below="@id/major_introduce_more"
                android:text="less"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/md_grey_300"
                />
        </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <!--
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end" />
    -->
</android.support.design.widget.CoordinatorLayout>
