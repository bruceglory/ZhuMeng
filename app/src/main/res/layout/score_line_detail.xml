<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/year"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/material_text_body1"
        android:layout_alignParentLeft="true"
        android:paddingBottom="@dimen/once_tap"
        android:paddingLeft="@dimen/once_tap"
        android:paddingTop="@dimen/once_tap"
        android:paddingRight="@dimen/once_tap"
        />

    <TextView
        android:id="@+id/third_batch"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/material_text_body1"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/once_tap"
        android:paddingLeft="@dimen/once_tap"
        android:paddingTop="@dimen/once_tap"
        android:paddingRight="@dimen/once_tap"
        />

    <TextView
        android:id="@+id/second_batch"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/material_text_body1"
        android:layout_toLeftOf="@id/third_batch"
        android:paddingBottom="@dimen/once_tap"
        android:paddingLeft="@dimen/once_tap"
        android:paddingTop="@dimen/once_tap"
        android:paddingRight="@dimen/once_tap"
        />

    <TextView
        android:id="@+id/first_batch"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:textSize="@dimen/material_text_body1"
        android:layout_toStartOf="@id/second_batch"
        android:paddingBottom="@dimen/once_tap"
        android:paddingLeft="@dimen/once_tap"
        android:paddingTop="@dimen/once_tap"
        android:paddingRight="@dimen/once_tap"
        />

</RelativeLayout>
