<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#bdbdbd"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ll_spinner_province"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="province"
            android:gravity="center"
            />

        <TextView
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:background="#666666"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/ll_spinner_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:text="city"
            android:gravity="center"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:background="#666666"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/ll_spinner_category"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:clickable="true"
            android:text="category"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:background="#666666"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/ll_spinner_filter"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:clickable="true"
            android:text="filter"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9e9e9e"
        android:layout_gravity="center"
        android:gravity="center"/>
    <include layout="@layout/my_recycler_view"/>

    <ProgressBar
        android:id="@+id/activity_schools_progress"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        />
</LinearLayout>
